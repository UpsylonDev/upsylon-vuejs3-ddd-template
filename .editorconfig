# EditorConfig is awesome: https://EditorConfig.org

root = true

# Tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript/Vue
[*.{js,ts,jsx,tsx,vue,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML (vite.config, package.json, etc)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# HTML
[*.html]
indent_style = space
indent_size = 2